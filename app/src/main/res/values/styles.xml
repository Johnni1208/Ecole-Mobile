<resources>

    <!-- Base application theme. -->
    <style name="Apptheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Apptheme_DarkActionBar" parent="@style/Apptheme_NoActionBar">
        <item name="android:theme">@style/Theme.AppCompat.Light.DarkActionBar</item>
    </style>

    <style name="Apptheme_LightActionBar" parent="@style/Theme.AppCompat.Light">
    </style>
</resources>
